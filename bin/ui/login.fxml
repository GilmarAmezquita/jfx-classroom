            <Label alignment="CENTER" text="Log in to classroom" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Label>
            <Label text="Username:" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="50.0" left="80.0" />
               </GridPane.margin>
            </Label>
            <Label text="Password:" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="80.0" top="50.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="txtUsernameLogIn" alignment="BOTTOM_LEFT" prefWidth="100.0" GridPane.rowIndex="1">
